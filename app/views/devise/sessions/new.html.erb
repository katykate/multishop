<h1>Log in</h1>

<div class="container">
  <div class="row">
    <div class="col-md-6">

      
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter Email"  %>
      </div>

      <div class="form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter Password"  %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>

      <% end -%>

      <div class="form-group">
        <%= f.submit "Log in", class: "btn btn-default btn-primary btn-lg"  %>
      </div>

    <% end %>

    <%= render "devise/shared/links" %>

    </div>

    <div class="col-md-6">
      <center><%= image_tag("signing.png", class: "img-fluid", height: '300', width: '300') %></center>
    </div>

  </div>
  <div id="back_button"> 
      <%= link_to 'Back', products_path, class: 'btn btn-success btn-lg' %>
  </div>
</div>