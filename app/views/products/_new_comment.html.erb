
<% if signed_in? %>
  <h2>Add a review:</h2>

  <%= form_for([@product, @product.comments.build]) do |f| %>

    <h3>
      <%= f.label :body, "Comments" %><br>
      <%= f.text_area :body, autofocus: true, required: true, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}', class: "form-control", cols: "75", rows: "7" %>
    </h3>

    <h3>
      <%= f.label :rating, autofocus: true, required: true %><br>
    </h3> 
    
    <p>
      <div class="rating">
      </div>
    </p>
     
  <%= f.submit "Submit", class: "btn btn-default btn-primary btn-lg" %>
    
  <% end %>
<% end %>