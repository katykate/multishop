<h1>Contact Us</h1>

<div class="container" id="contact">


<%= flash[:notice] %>

<%= form_with(url: "/static_pages/thank_you") do |form| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, autofocus: true, required: true, class: "form-control", placeholder: "Enter Name" %>
      </div>        
      <div class="form-group">
        <%= form.label :email, "Email Address" %>
        <%= form.text_field :email, autofocus: true, required: true, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}', class: "form-control",placeholder: "Enter Email" %>
      </div>
      <div class="form-group" id="textfield">
        <%= form.label :message %>
        <%= form.text_area :message, autofocus: true, required: true, class: "form-control", placeholder: "Enter Message", cols: "75", rows: "7", minlength: 20 %>
      </div>   
      <%= form.submit "Send", class: "btn btn-default btn-primary btn-lg" %>        
    </div>
  
  
<% end %>
  
    <div class="col-md-6"><center><%= image_tag("Kontakt.jpg", class: "img-fluid") %></center>
    </div>
    
  </div>
</div>