
<div class="container">
  <div class="row">
    <div class="col-md-6">

        <%= form_with(model: user, local: true) do |form| %>
        <% if user.errors.any? %>

    <div id="error_explanation">

        <h1><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h1>

        <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
