    <div class="form-group">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, id: :user_last_name, class: "form-control", placeholder: "Last Name" %>
    </div>

    <div class="form-group">
        <%= form.label :email %><br />
        <%= form.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter Email"  %>
    </div>

    <div class="form-group">
      <%= form.submit "Update", class: "btn btn-default btn-primary btn-lg"%>
    </div>

<% end %>

    </div>
  </div>
</div>